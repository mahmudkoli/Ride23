{
  "AllowedHosts": "*",
  "OpenIdOptions": {
    "Authority": "http://localhost:5001/",
    "Audience": "driver.resource.server"
  },
  "SerilogOptions": {
    "WriteToFile": true,
    "StructuredConsoleLogging": false,
    "EnableErichers": false,
    "MinimumLogLevel": "Information"
  },
  "AppOptions": {
    "Name": "Driver Service"
  },
  "SwaggerOptions": {
    "Title": "Driver Service",
    "Description": "Open API Documentation of Driver Service API.",
    "Name": "Ride23 Admin",
    "Email": "admin@ride23"
  },
  "EFCoreOptions": {
    "DBProvider": "postgresql",
    "DefaultSchema": "Driver",
    "ConnectionString": "Host=localhost;Port=5430;Database=Ride23;Username=postgres;Password=admin;Include Error Detail=true"
  },
  "KafkaOptions": {
    "BootstrapServers": "localhost:9092"
  },
  "CachingOptions": {
    "EnableDistributedCaching": "false",
    "SlidingExpirationInMinutes": 5,
    "AbsoluteExpirationInMinutes": 10
  }
}
